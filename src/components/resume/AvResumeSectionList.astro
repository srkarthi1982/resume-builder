---
interface Section {
  id: string;
  type: string;
  title: string;
  isVisible: boolean;
  isActive?: boolean;
}

interface Props {
  sections: Section[];
}

const { sections } = Astro.props as Props;
---

<div class="av-resume-section-list">
  <h3 class="av-resume-section-list__title">Sections</h3>
  <ul class="av-resume-section-list__items">
    {sections.map((section) => (
      <li
        class="av-resume-section-list__item"
        data-visible={section.isVisible ? "true" : "false"}
        data-active={section.isActive ? "true" : undefined}
      >
        <span class="av-resume-section-list__name">{section.title}</span>
        <span class="av-resume-section-list__type">{section.type}</span>
      </li>
    ))}
  </ul>
</div>

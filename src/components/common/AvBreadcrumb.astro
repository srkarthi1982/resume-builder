---
import { AvButton } from "@ansiversa/components";

interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  items: Crumb[];
}

const { items } = Astro.props as Props;
---

<nav class="av-breadcrumb" aria-label="Breadcrumb">
  <ol class="av-breadcrumb__list">
    {items.map((item, index) => {
      const isLast = index === items.length - 1;
      return (
        <li
          class="av-breadcrumb__item"
          key={`${item.label}-${index}`}
          aria-current={isLast ? "page" : undefined}
        >
          {item.href && !isLast ? (
            <AvButton href={item.href} variant="ghost" size="sm">
              {item.label}
            </AvButton>
          ) : (
            <span class="av-breadcrumb__current">{item.label}</span>
          )}
        </li>
      );
    })}
  </ol>
</nav>

<style>
  .av-breadcrumb {
    width: 100%;
    margin: 10px 0;
  }

  .av-breadcrumb__list {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: nowrap;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .av-breadcrumb__item {
    white-space: nowrap;
  }
</style>

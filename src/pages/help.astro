---
import { AvBreadcrumb, AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Help – Resume Builder";
const description = "Learn how to build, edit, and export a resume.";
---

<AppShell title={title} description={description}>
  <section class="av-faq-public__crumb">
    <AvContainer>
      <AvBreadcrumb items={[{ label: "Home", href: "/" }, { label: "Help" }]} />
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-stack-md">
          <div>
            <p class="av-kicker">Resume Builder</p>
            <h1 class="av-section-title">Help</h1>
            <p class="av-text-soft">
              Build a clean, professional resume with guided templates and structured sections.
            </p>
          </div>
          <div class="av-row-wrap">
            <AvButton href="/app/resumes">Go to resumes</AvButton>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">How to start</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Create a resume project.</p>
              <p class="av-text-soft">• Choose a template and fill sections.</p>
              <p class="av-text-soft">• Preview and export when ready.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Key features</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Structured sections with live preview.</p>
              <p class="av-text-soft">• Template-based layouts.</p>
              <p class="av-text-soft">• Print-friendly export view.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Free vs Pro</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Free: Templates 1–2.</p>
              <p class="av-text-soft">• Pro: Templates 3–4 unlocked.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Troubleshooting</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• If preview is blank, refresh the page.</p>
              <p class="av-text-soft">• Ensure you are signed in to save changes.</p>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>

---
import { AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Ansiversa Resume Builder";
const description =
  "Build, edit, and print your resumes with Ansiversa templates.";
---

<AppShell title={title} description={description}>
  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-card">
          <div class="av-auth-stack-md">
            <div class="av-auth-stack-xs">
              <p class="av-kicker">Resume Builder</p>
              <h1 class="av-section-title">Create your next resume</h1>
              <p class="av-text-soft">
                Create multiple resumes, set a default version, and preview or print in one click.
              </p>
            </div>

            <div class="av-row-wrap">
              <AvButton href="/app/resumes">Open resume builder</AvButton>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>

---
import AppShell from "../layouts/AppShell.astro";
import {
  AvButton,
  AvCard,
  AvContainer,
  AvDivider,
  AvFeatureItem,
  AvFeatureList,
} from "@ansiversa/components";
---

<AppShell
  title="Tell Your Story Clearly | Ansiversa Resume Builder"
  description="Guided, ATS-friendly resume creation with honest pricing, fast performance, and templates designed for real employers."
>
  <section class="av-hero">
    <AvContainer size="narrow" className="av-hero__content--narrow">
      <div class="av-hero__content">
        <div class="av-kicker">
          <span>Ansiversa Ecosystem</span>
        </div>
        <h1 class="av-gradient-text">A Resume Builder That Understands You</h1>
        <p class="text-slate-300">
          Guided, brain-friendly flow that helps you write stronger bullets and summaries—not just rearrange boxes. Clean, ATS
          safe templates with honest pricing and smooth performance on every device.
        </p>
      </div>
      <div class="av-cta-row">
        <AvButton href="/app/resume">Create Your Resume</AvButton>
        <AvButton href="#templates" variant="outline">View Templates</AvButton>
      </div>
      <AvFeatureList className="justify-center mt-10">
        <AvFeatureItem variant="primary">Guided, low-stress editing</AvFeatureItem>
        <AvFeatureItem variant="primary">Truly ATS-safe structure</AvFeatureItem>
        <AvFeatureItem variant="primary">No surprise paywalls</AvFeatureItem>
        <AvFeatureItem variant="primary">Mobile-first experience</AvFeatureItem>
      </AvFeatureList>
    </AvContainer>
  </section>

  <section class="av-section" id="why">
    <AvContainer>
      <div class="av-section-header">
        <h2 class="av-section-title">What Problem Are We Solving?</h2>
        <p class="av-section-lead">Resume creation is stressful, confusing, and full of hidden traps. We remove the friction.</p>
      </div>
      <div class="av-section-grid">
        <AvCard>
          <p class="av-card-heading">Builders feel overwhelming</p>
          <p class="text-slate-300">Too many fields, clicks, and settings slow people down. We guide one clear step at a time.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Generic or outdated templates</p>
          <p class="text-slate-300">Stiff designs hurt your story. Our layouts are clean, modern, and recruiter-approved.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Hidden paywalls and traps</p>
          <p class="text-slate-300">Download, PDF export, and watermark removal stay free. Transparency is the default.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Fake ATS compliance</p>
          <p class="text-slate-300">No tricky two-column traps, no icon-heavy layouts—just machine-readable hierarchy.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">No content coaching</p>
          <p class="text-slate-300">Examples and prompts help you craft achievement-driven bullets and strong summaries.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Painful on mobile</p>
          <p class="text-slate-300">Built to edit safely from one hand with fast autosave and quick preview.</p>
        </AvCard>
      </div>
    </AvContainer>
  </section>

  <section class="av-section" id="how-it-works">
    <AvContainer>
      <div class="av-section-header">
        <h2 class="av-section-title">What We’re Building</h2>
        <p class="av-section-lead">A smart, guided, story-focused system that helps you finish faster with confidence.</p>
      </div>
      <div class="av-steps">
        <div class="av-step">
          <div class="av-step-number">1</div>
          <div class="av-step-body">
            <p class="font-semibold text-slate-100">Guided, brain-friendly flow</p>
            <p>One question at a time reduces cognitive load and keeps you focused on great content.</p>
          </div>
        </div>
        <div class="av-step">
          <div class="av-step-number">2</div>
          <div class="av-step-body">
            <p class="font-semibold text-slate-100">Smart content helper</p>
            <p>Rewrite bullets professionally, turn tasks into achievements, and highlight skills for the role.</p>
          </div>
        </div>
        <div class="av-step">
          <div class="av-step-number">3</div>
          <div class="av-step-body">
            <p class="font-semibold text-slate-100">Templates for real employers</p>
            <p>Modern, ATS-safe layouts with correct spacing, hierarchy, and recruiter expectations baked in.</p>
          </div>
        </div>
        <div class="av-step">
          <div class="av-step-number">4</div>
          <div class="av-step-body">
            <p class="font-semibold text-slate-100">Evolve your resume</p>
            <p>Reorder sections, switch templates, and return anytime for instant downloads with no watermark.</p>
          </div>
        </div>
      </div>
    </AvContainer>
  </section>

  <section class="av-section" id="templates">
    <AvContainer>
      <div class="av-section-header">
        <h2 class="av-section-title">Templates Built for ATS &amp; Clarity</h2>
        <p class="av-section-lead">Clean hierarchy, simple fonts, and no graphics that break parsing.</p>
      </div>
      <div class="av-section-grid">
        {[
          {
            title: "Modern Blue Template",
            accent: "from-cyan-500/20 to-blue-500/10",
          },
          {
            title: "Minimal White Template",
            accent: "from-slate-200/10 to-slate-800/20",
          },
          {
            title: "Two-Column Professional",
            accent: "from-indigo-500/20 to-purple-500/10",
          },
          {
            title: "Creative Accent Template",
            accent: "from-amber-400/25 to-pink-500/10",
          },
          {
            title: "Executive Serif",
            accent: "from-emerald-400/20 to-cyan-500/10",
          },
          {
            title: "Clean Monoline",
            accent: "from-fuchsia-500/20 to-blue-500/10",
          },
        ].map((template) => (
          <AvCard className={`space-y-3 bg-gradient-to-br ${template.accent}`}>
            <p class="av-card-heading">Template</p>
            <h3 class="text-lg font-semibold text-slate-100">{template.title}</h3>
            <p class="text-sm text-slate-200/80">Follows strict spacing, readable headings, and machine-friendly structure.</p>
            <AvButton variant="ghost" href="/app/resume">Use Template</AvButton>
          </AvCard>
        ))}
      </div>
    </AvContainer>
  </section>

  <section class="av-section" id="features">
    <AvContainer>
      <div class="av-section-header">
        <h2 class="av-section-title">Why Ansiversa Is Different</h2>
        <p class="av-section-lead">More than a template picker—every choice respects recruiter standards and user trust.</p>
      </div>
      <div class="av-section-grid">
        <AvCard>
          <p class="av-card-heading">Transparent by design</p>
          <p class="text-slate-300">Free creation, free editing, and free PDF downloads. No watermark surprises.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Speed standard</p>
          <p class="text-slate-300">Every action targets a 4-second response: switch templates, load resumes, and download instantly.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Seamless mobile experience</p>
          <p class="text-slate-300">One-hand-friendly editing with safe autosave, fast preview, and confident PDF export.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Integrated ecosystem</p>
          <p class="text-slate-300">Consistent UI, single sign-on, and access to curated career, study, and utility tools.</p>
        </AvCard>
      </div>
      <AvDivider className="my-10" />
      <AvFeatureList className="grid gap-3 md:grid-cols-3">
        <AvFeatureItem variant="secondary">Cleaner and more modern than legacy builders</AvFeatureItem>
        <AvFeatureItem variant="secondary">Guided writing with helpful examples and prompts</AvFeatureItem>
        <AvFeatureItem variant="secondary">Part of a premium 100-app Ansiversa ecosystem</AvFeatureItem>
      </AvFeatureList>
    </AvContainer>
  </section>

  <section class="av-section" id="testimonials">
    <AvContainer>
      <div class="av-section-header">
        <h2 class="av-section-title">Why Early Users Love It</h2>
        <p class="av-section-lead">Confidence from clear guidance, transparent pricing, and recruiter-ready output.</p>
      </div>
      <div class="av-section-grid">
        {["Best resume builder I've ever used—simple and clean!", "ATS score improved instantly when I switched template.", "Loved the real-time preview and easy editing."].map(
          (quote) => (
            <AvCard variant="soft">
              <p class="text-slate-100">“{quote}”</p>
            </AvCard>
          )
        )}
      </div>
    </AvContainer>
  </section>

  <section class="av-section" id="faq">
    <AvContainer>
      <div class="av-section-header">
        <h2 class="av-section-title">Frequently Asked Questions</h2>
        <p class="av-section-lead">Quick answers about pricing, editing, and ATS compliance.</p>
      </div>
      <div class="av-section-grid">
        <AvCard>
          <p class="av-card-heading">Is it free to use?</p>
          <p class="text-slate-300">Yes. Create, edit, and download PDFs without paywalls or watermarks.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Do I need an account to start?</p>
          <p class="text-slate-300">No login required to begin. Sign in only if you want to save progress for later.</p>
        </AvCard>
        <AvCard>
          <p class="av-card-heading">Are templates ATS-friendly?</p>
          <p class="text-slate-300">Absolutely. Every layout follows ATS compliance guidelines.</p>
        </AvCard>
      </div>
    </AvContainer>
  </section>

  <section class="av-section bg-slate-950/80" id="cta">
    <AvContainer size="narrow" className="text-center space-y-4">
      <h2 class="text-3xl font-semibold text-slate-50">Ready to tell your story clearly?</h2>
      <p class="text-slate-300">
        Ansiversa Resume Builder is your career companion—helping you craft a confident, professional, ATS-ready resume.
      </p>
      <div class="av-cta-row justify-center">
        <AvButton href="/app/resume">Create Your Resume</AvButton>
        <AvButton href="#templates" variant="ghost">Explore Templates</AvButton>
      </div>
    </AvContainer>
  </section>
</AppShell>

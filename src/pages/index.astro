---
import { AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Ansiversa Resume Builder";
const description =
  "Resume builder mini-app baseline with shared shells, auth guard, and example CRUD.";
---

<AppShell title={title} description={description}>
  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-card">
          <div class="av-auth-stack-md">
            <div class="av-auth-stack-xs">
              <p class="av-kicker">Resume Builder</p>
              <h1 class="av-section-title">Resume Builder baseline</h1>
              <p class="av-text-soft">
                This app is currently reset to the Ansiversa starter baseline. It includes shared
                layout shells, auth guard, notifications badge wiring, and a deletable Example
                Items module.
              </p>
            </div>

            <div class="av-row-wrap">
              <AvButton href="/items">Open Example Items</AvButton>
              <AvButton href="/admin/items" variant="ghost">Admin Items</AvButton>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>
